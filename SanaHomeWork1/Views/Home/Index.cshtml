@model SanaHomeWork1.Models.User;
@{
    ViewData["Title"] = "Home Page";
    string greeting = DateTime.Now.Hour > 12 ? "дня" : "ранку";
}

<div class="text-center">
    <h1>Доброго @greeting!</h1>
    <p>Введіть ваше ім'я:</p>
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col">
            <form asp-action="Greetings" method="get">
            <div asp-validation-summary="All"></div>
            <input type="text" name="Name" class="form-control"/>
            <br />
            <button class="btn btn-primary" type="submit">Підтвердити</button>

            
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
